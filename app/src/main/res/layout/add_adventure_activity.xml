<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adventure_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить путешествие"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/adventure_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Название (откуда куда)"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/adventure_desc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Описание путешествия"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/image_pick"
        android:layout_width="116dp"
        android:layout_height="122dp"
        android:contentDescription="TODO"
        android:src="@drawable/choose_image">

    </ImageView>

    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#003CA6"
        android:text="Добавить"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</LinearLayout>