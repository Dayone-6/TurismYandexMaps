<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.tickets.TicketsSearchFragment">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Поля &quot;Пункт отпрвления&quot; и &quot;Пункт прибытия&quot; заполняются в формате IATA-код города или аэропорта.\nПоля &quot;Время отправления&quot; и &quot;Время прибытия&quot; не обязательны к заполнению, заполняются в формате YYYY-MM-DD или YYYY-MM."
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Пункт отправления"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Пункт прибытия"
            android:inputType="textPersonName"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/from_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Дата вылета"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Дата прилета"
            android:inputType="textPersonName"
            android:textSize="20sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/direct"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Без пересадок?"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/limit"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Максимальное количесво билетов"
        android:inputType="number"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#003CA6"
        android:text="Найти билеты"
        android:textColor="#FFFFFF" />
</LinearLayout>